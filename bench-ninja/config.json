{
    "vars": {
        "checkpoint-sim": "pincpu",
	    "pin": "../pin/pin",
	    "pinpoints": "../tools/build/libbbtrace.so",
        "functoinst" : "../tools/build/libfunctoinst.so",
        "pin_tool": "../gem5/pincpu/pintool/build/libclient.so",
        "pin_kernel": "../gem5/pincpu/pintool/build/kernel",
	    "interval": 50000000,
	    "simpoint": "../simpoint/bin/simpoint",
	    "num_simpoints": 10,
	    "memsize": "8GB",
	    "ss": "8MB",
	    "warmup": 10000000,
	    "bbv-impl": "pin"
    },
    
    "sw": {
	    "_default": {
	        "spec2017": "../cpu2017",
	        "test-suite": "../test-suite",
	        "cmake_build_type": "Release",
	        "cflags": ["-O3", "-mno-avx", "-mllvm", "-global-isel", "-mllvm", "-global-isel-abort=0"],
	        "fflags": ["-O3", "-mno-avx", "-mllvm", "-global-isel", "-mllvm", "-global-isel-abort=0"],
	        "ldflags": ["-static", "-fuse-ld=lld", "-Wl,--allow-multiple-definition", "-lm"],
	        "libc_cflags": ["-mllvm", "-global-isel=0"],
	        "libcxx_cflags": ["-mllvm", "-global-isel=0"],
	        "deps": []
	    },

	    "base": {
	        "inherit": "_default",
            "llvm": "../llvm/base",
            "cc": "../llvm/base/build/bin/clang",
            "cxx": "../llvm/base/build/bin/clang++",
            "fc": "../llvm/base/build/bin/flang-new",
            "+ldflags": ["-L/home/nmosier/llsct2/llvm/base/build/lib"]
	    },

        "ptex-dep": {
            "inherit": "_default",
            "parent": "base",
            "llvm": "../llvm/ptex-dep",
            "cc": "../llvm/ptex-dep/build/bin/clang",
            "cxx": "../llvm/ptex-dep/build/bin/clang++",
            "fc": "../llvm/ptex-dep/build/bin/flang-new",
            "+cflags": ["-mllvm", "-x86-ptex"],
            "+fflags": ["-mllvm", "-x86-ptex"],
            "+ldflags": ["-L/home/nmosier/llsct2/llvm/ptex-dep/build/lib"]
        },

        "ptex-rel": {
            "inherit": "_default",
            "parent": "base",
            "llvm": "../llvm/ptex-rel",
            "cc": "../llvm/ptex-rel/build/bin/clang",
            "cxx": "../llvm/ptex-rel/build/bin/clang++",
            "fc": "../llvm/ptex-rel/build/bin/flang-new",
            "+cflags": ["-mllvm", "-x86-ptex"],
            "+fflags": ["-mllvm", "-x86-ptex"],
            "+ldflags": ["-L/home/nmosier/llsct2/llvm/ptex-rel/build/lib"]
        },

        "ptex-all": {
            "inherit": "_default",
            "parent": "base",
            "llvm": "../llvm/ptex-all",
            "cc": "../llvm/ptex-all/build/bin/clang",
            "cxx": "../llvm/ptex-all/build/bin/clang",
            "fc": "../llvm/ptex-all/build/bin/flang-new",
            "+ldflags": ["-L/home/nmosier/llsct2/llvm/ptex-all/build/lib"]
        },

	    "ptex-rel-stores": {
	        "inherit": "ptex-rel",
	        "+cflags": ["-mllvm", "-x86-ptex-stores"],
	        "+fflags": ["-mllvm", "-x86-ptex-stores"]
	    },

	    "annotate-pointer-loads": {
	        "inherit": "base",
	        "+cflags": ["-mllvm", "-x86-annotate-pointers", "-mllvm", "-x86-annotate-pointers-all"],
	        "+fflags": ["-mllvm", "-x86-annotate-pointers", "-mllvm", "-x86-annotate-pointers-all"]
	    },

        "ptex-rel-debug": {
            "inherit": "ptex-rel",
            "cc": "../llvm/build-debug/bin/clang",
            "cxx": "../llvm/build-debug/bin/clang++",
            "fc": "../llvm/build-debug/bin/flang-new"
        },

        "ptex-rel-debug-future": {
            "inherit": "ptex-rel-debug",
            "+cflags": ["-mllvm", "-global-isel", "-mllvm", "-global-isel-abort=0"],
            "+fflags": ["-mllvm", "-global-isel", "-mllvm", "-global-isel-abort=0"],
            "+libc_cflags": ["-mllvm", "-global-isel=0"],
            "+libcxx_cflags": ["-mllvm", "-global-isel=0"]
        },

        "ptex-rel-lto": {
            "inherit": "ptex-rel-debug-future",
            "+cflags": ["-flto", "-fuse-ld=lld", "-Wl,-mllvm,-x86-ptex,-mllvm,-global-isel,-mllvm,-global-isel-abort=0"],
            "+fflags": ["-flto", "-fuse-ld=lld", "-Wl,-mllvm,-x86-ptex,-mllvm,-global-isel,-mllvm,-global-isel-abort=0"],
            "+libc_cflags": ["-Wl,-mllvm,-global-isel=0"],
            "+libcxx_cflags": ["-Wl,-mllvm,-global-isel=0"],
            "+ldflags": ["-flto", "-Wl,-mllvm,-x86-ptex,-mllvm,-global-isel,-mllvm,-global-isel-abort=0"]
        }
    },

    "sim": {
	    "_default": {
	        "target": "build/X86_MESI_Three_Level/gem5.opt",
	        "script_kvm": "configs/se-kvm-cpt.py",
	        "script_o3": "configs/AlderLake/se.py",
	        "sconsopts": ["--ignore-style", "-j25"]
	    },
	    "base": {
	        "inherit": "_default",
	        "src": "../gem5/base"
	    },
        "pincpu": {
            "inherit": "_default",
            "src": "../gem5/pincpu",
            "script_bbv": "configs/pin-bbv.py",
            "script_f2i": "confgis/pin-f2i.py"
        },
        "ptex": {
            "inherit": "_default",
            "src": "../gem5/ptex"
        },
	    "tpe": {
	        "inherit": "_default",
	        "src": "../gem5/tpe"
	    },
	    "spt": {
	        "inherit": "_default",
	        "src": "../gem5/spt"
	    },
        "stt": {
            "inherit": "_default",
            "src": "../gem5/stt"
        },
        "tpt": {
            "inherit": "_default",
            "src": "../gem5/tpt"
        }
    },

    "hwmode": {
	    "_default": {
            "gem5_opts": ["--debug-file=dbgout.txt.gz"],
	        "script_opts": ["--ruby", "--enable-prefetch"]
	    },

	    "base": {"inherit": "_default"},

        "ptex": {"inherit": "_default"},

	    "tpe": {
	        "inherit": "_default",
	        "+script_opts": ["--tpe-reg", "--tpe-mem", "--tpe-xmit"],
	        "+gem5_opts": []
	    },

        "tpe-spectre": {"inherit": "tpe", "+script_opts": ["--speculation-model=CtrlSt"]},

	    "spt": {
	        "inherit": "_default",
	        "+script_opts": ["--enableSPT=1", "--moreTransmitInsts=2", "--fwd-untaint", "--bwd-untaint"]
	    },

	    "stt": {
	        "inherit": "_default",
            "+script_opts": ["--stt", "--stt-bugfixes", "--implicit-channel"]
	    },

        "tpt": {"inherit": "_default", "+script_opts": ["--tpt", "--implicit-channel"]},

        "stt-ctrl": {"inherit": "stt", "+script_opts": ["--speculation-model=Ctrl"]},
        "spt-ctrl": {"inherit": "spt", "+script_opts": ["--speculation-model=Ctrl"]},
        "tpt-ctrl": {"inherit": "tpt", "+script_opts": ["--speculation-model=Ctrl", "--tpt-mode=YRoT"]},
        "tpe-ctrl": {"inherit": "tpe", "+script_opts": ["--speculation-model=Ctrl"]},
        "stt-atret": {"inherit": "stt", "+script_opts": ["--speculation-model=AtRet"]},
        "spt-atret": {"inherit": "spt", "+script_opts": ["--speculation-model=AtRet"]},
        "tpt-atret": {"inherit": "tpt", "+script_opts": ["--speculation-model=AtRet", "--tpt-mode=YRoT"]},
        "tpe-atret": {"inherit": "tpe", "+script_opts": ["--speculation-model=AtRet"]}
    },

    "exp": {
        "unsafe-base": {"sw": "base", "sim": "base", "hwmode": "base"},
        "stt-base-ctrl": {"sw": "base", "sim": "stt", "hwmode": "stt-ctrl"},
        "stt-base-atret": {"sw": "base", "sim": "stt", "hwmode": "stt-atret"},
        "spt-base-ctrl": {"sw": "base", "sim": "spt", "hwmode": "spt-ctrl"},
        "spt-base-atret": {"sw": "base", "sim": "spt", "hwmode": "spt-atret"},
        "tpt-base-ctrl": {"sw": "base", "sim": "tpt", "hwmode": "tpt-ctrl"},
        "tpt-base-atret": {"sw": "base", "sim": "tpt", "hwmode": "tpt-atret"},
        "tpe-base-ctrl": {"sw": "base", "sim": "tpe", "hwmode": "tpe-ctrl"},
        "tpe-base-atret": {"sw": "base", "sim": "tpe", "hwmode": "tpe-atret"},

        "unsafe-dep": {"sw": "ptex-dep", "sim": "base", "hwmode": "base"},
        "stt-dep-atret": {"sw": "ptex-dep", "sim": "stt", "hwmode": "stt-atret"},
        "stt-dep-ctrl": {"sw": "ptex-dep", "sim": "stt", "hwmode": "stt-ctrl"},
        "spt-dep-ctrl": {"sw": "ptex-dep", "sim": "spt", "hwmode": "spt-ctrl"},
        "spt-dep-atret": {"sw": "ptex-dep", "sim": "spt", "hwmode": "spt-atret"},
        "tpt-dep-ctrl": {"sw": "ptex-dep", "sim": "tpt", "hwmode": "tpt-ctrl"},
        "tpt-dep-atret": {"sw": "ptex-dep", "sim": "tpt", "hwmode": "tpt-atret"},
        
	    "unsafe-rel": {"sw": "ptex-rel", "sim": "base", "hwmode": "base"},
        "stt-rel-ctrl": {"sw": "ptex-rel", "sim": "stt", "hwmode": "stt-ctrl"},
        "stt-rel-atret": {"sw": "ptex-rel", "sim": "stt", "hwmode": "stt-atret"},
        "spt-rel-ctrl": {"sw": "ptex-rel", "sim": "spt", "hwmode": "spt-ctrl"},
        "spt-rel-atret": {"sw": "ptex-rel", "sim": "spt", "hwmode": "spt-atret"},
        "tpt-rel-ctrl": {"sw": "ptex-rel", "sim": "tpt", "hwmode": "tpt-ctrl"},
        "tpt-rel-atret": {"sw": "ptex-rel", "sim": "tpt", "hwmode": "tpt-atret"}
    }
}
