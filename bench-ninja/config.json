{
    "vars": {
	    "checkpoint-sim": "base",
	    "pin": "../pin/pin",
	    "pinpoints": "../tools/build/libbbtrace.so",
	    "valgrind": "../valgrind/install/bin/valgrind",
	    "interval": 50000000,
	    "simpoint": "../simpoint/bin/simpoint",
	    "num_simpoints": 10,
	    "memsize": "8GB",
	    "ss": "8MB",
	    "warmup": 10000000,
	    "bbv-impl": "pin",
	    "cfitool": "../tools/build/libCFI.so"
    },
    
    "sw": {
	    "_default": {
	        "spec2017": "../cpu2017",
	        "test-suite": "../test-suite",
	        "llvm": "../llvm",
	        "cc": "../llvm/build/bin/clang",
	        "cxx": "../llvm/build/bin/clang++",
	        "fc": "../llvm/build/bin/flang-new",
	        "cmake_build_type": "Release",
	        "cflags": ["-O3", "-mno-avx"],
	        "fflags": ["-O3", "-mno-avx"],
	        "ldflags": ["-static", "-fuse-ld=lld", "-Wl,--allow-multiple-definition", "-L/home/nmosier/llsct2/llvm/build/lib"],
	        "libc_cflags": [],
	        "libcxx_cflags": [],
	        "deps": []
	    },

	    "base": {
	        "inherit": "_default"
	    },

	    "_ptex": {
	        "inherit": "_default",
	        "+cflags": ["-mllvm", "-x86-ptex"],
	        "+fflags": ["-mllvm", "-x86-ptex"]
	    },

	    "ptex-rel": {"inherit": "_ptex"},

	    "ptex-rel-stores": {
	        "inherit": "ptex-rel",
	        "+cflags": ["-mllvm", "-x86-ptex-stores"],
	        "+fflags": ["-mllvm", "-x86-ptex-stores"]
	    },

	    "annotate-pointer-loads": {
	        "inherit": "base",
	        "+cflags": ["-mllvm", "-x86-annotate-pointers", "-mllvm", "-x86-annotate-pointers-all"],
	        "+fflags": ["-mllvm", "-x86-annotate-pointers", "-mllvm", "-x86-annotate-pointers-all"]
	    },

        "ptex-rel-debug": {
            "inherit": "ptex-rel",
            "cc": "../llvm/build-debug/bin/clang",
            "cxx": "../llvm/build-debug/bin/clang++",
            "fc": "../llvm/build-debug/bin/flang-new"
        },

        "ptex-rel-debug-future": {
            "inherit": "ptex-rel-debug",
            "+cflags": ["-mllvm", "-x86-privty-future-only", "-mllvm", "-global-isel", "-mllvm", "-global-isel-abort=0"],
            "+fflags": ["-mllvm", "-x86-privty-future-only", "-mllvm", "-global-isel", "-mllvm", "-global-isel-abort=0"],
            "+libc_cflags": ["-mllvm", "-global-isel=0"],
            "+libcxx_cflags": ["-mllvm", "-global-isel=0"]
        },

        "ptex-rel-debug-future-dump": {
            "inherit": "ptex-rel-debug-future",
            "+cflags": ["-mllvm", "-x86-privty-dump", "-mllvm", "-x86-privty-dump-filter=S_regmatch"]
        }
    },

    "sim": {
	    "_default": {
	        "target": "build/X86_MESI_Three_Level/gem5.opt",
	        "script_kvm": "configs/deprecated/example/se.py",
	        "script_o3": "configs/AlderLake/se.py",
	        "sconsopts": ["--ignore-style", "-j25"]
	    },
	    
	    "base": {
	        "inherit": "_default",
	        "src": "../gem5/base"
	    },
	    "tpe": {
	        "inherit": "_default",
	        "src": "../gem5/tpe"
	    },
	    "spt": {
	        "inherit": "_default",
	        "src": "../gem5/spt"
	    },
	    "stt": {
	        "inherit": "_default",
	        "src": "../gem5/stt"
	    }
    },

    "hwmode": {
	    "_default": {
            "gem5_opts": ["--debug-file=dbgout.txt.gz"],
	        "script_opts": ["--ruby", "--enable-prefetch"]
	    },

	    "base": {
	        "inherit": "_default"
	    },

	    "tpe": {
	        "inherit": "_default",
	        "+script_opts": ["--tpe-reg", "--tpe-mem", "--tpe-xmit"],
	        "+gem5_opts": ["--debug-flag=TPE"]
	    },

	    "spt": {
	        "inherit": "_default",
	        "+script_opts": ["--enableSPT=1", "--moreTransmitInsts=2"]
	    },

	    "stt": {
	        "inherit": "_default",
	        "+script_opts": ["--STT=1"]
	    }
    },

    "exp": {
	    "unsafe-rel": {"sw": "ptex-rel", "sim": "base", "hwmode": "base"},
	    "tpe-rel": {"sw": "ptex-rel", "sim": "tpe", "hwmode": "tpe"},
	    "spt-rel": {"sw": "ptex-rel", "sim": "spt", "hwmode": "spt"},
	    "spt-pointer-loads": {"sw": "annotate-pointer-loads", "sim": "spt", "hwmode": "spt"},

        "unsafe-rel-future": {"sw": "ptex-rel-debug-future", "sim": "base", "hwmode": "base"},
        "tpe-rel-future": {"sw": "ptex-rel-debug-future", "sim": "tpe", "hwmode": "tpe"}
    }
}
